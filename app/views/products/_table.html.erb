<table class="table table-bordered">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Name</th>
    <th scope="col">Description</th>
    <th scope="col">Url</th>
    <th scope="col">Image URL</th>
    <th scope="col">Price</th>
    <th scope="col">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <th><%= product.id %></th>
      <td><strong><%= product.name %></strong></td>
      <td><%= product.description %></td>
      <td><%= link_to "Product URL", product.url %></td>
      <td>
        <% unless product.image_url.nil? %>
          <% image_urls = product.image_url.split(',') %>
          <% first_image_url = image_urls.first.strip %>
          <%= image_tag(first_image_url, class: "rounded", style: "width: 200px; height: 200px; object-fit: cover;", loading: "lazy") %>
        <% end %>
      </td>
      <td><%= "#{product.price} EGP" %></td>
       <td>
        <div class="btn-group">
          <%= link_to 'Edit' , edit_product_path(product), class: 'btn btn-outline-success btn-sm' %>
          <%= link_to 'Show', product_path(product), class: 'btn btn-outline-primary btn-sm', style: "margin: 1px 10px 1px 10px;" %>
        </div>
      </td>
    </tr>
  <% end %>
</table>
